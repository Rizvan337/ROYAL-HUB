<%- include("../../views/partials/admin/header") %>

<style>
  /* General Styling */
  body {
    font-family: "Roboto", sans-serif;
    background-color: #eaf2fb; /* Light Blue Background */
    margin: 0;
    padding: 0;
  }

  .order-details-container {
    max-width: 1000px;
    margin: 30px auto;
    padding: 30px;
    background: #ffffff;
    border-radius: 15px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    border-top: 5px solid #d7dde2; /* Accent Border */
  }

  h2, h3 {
    color: #696b6d;
    font-weight: 700;
    margin-bottom: 20px;
  }

  h2 {
    border-bottom: 3px solid #c0c5ca;
    padding-bottom: 10px;
  }

  .order-id {
    font-size: 1.2rem;
    font-weight: 500;
    color: #7f8c8d;
    margin-bottom: 20px;
  }

  /* Table Styling */
  .order-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 30px;
    font-size: 15px;
    color: #6a6d69;
    border: 1px solid #ddd;
  }

  .order-table th, .order-table td {
    padding: 15px;
    text-align: left;
    border-bottom: 1px solid #e1e4ea;
  }

  .order-table th {
    background-color: #c9cfc7;
    color: #ffffff;
    font-weight: 700;
    text-transform: uppercase;
    text-align: left;
  }

  .order-table td {
    background-color: #f5f9ff; /* Light Blue Tint */
    color: #2c3e50;
  }

  .order-table tbody tr:hover {
    background-color: #dceefd; /* Highlighted Row */
  }

  /* Status Badge */
  .status-badge {
    display: inline-block;
    padding: 10px 15px;
    border-radius: 20px;
    color: white;
    font-weight: 600;
    text-transform: capitalize;
    font-size: 14px;
  }

  .status-pending {
    background-color: #f39c12;
  }

  .status-processing {
    background-color: #3498db;
  }

  .status-shipped {
    background-color: #2ecc71;
  }

  .status-delivered {
    background-color: #1abc9c;
  }

  .status-cancelled {
    background-color: #e74c3c;
  }

  .status-return-request {
    background-color: #e67e22;
  }

  /* Order Summary */
  .summary-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
  }

  .summary-container h3 {
    margin: 0;
  }

  p {
    margin: 5px 0;
    font-size: 15px;
    color: #34495e;
  }

  p strong {
    color: #2c3e50;
    font-weight: 600;
  }

  /* Buttons */
  .btn {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    border-radius: 5px;
    background-color: #666869;
    color: #ffffff;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .btn:hover {
    background-color: #2980b9;
    transform: scale(1.05);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .order-details-container {
      padding: 20px;
    }

    h2, h3 {
      font-size: 1.5rem;
    }

    .order-table th, .order-table td {
      padding: 10px;
    }

    .btn {
      font-size: 14px;
      padding: 8px 15px;
    }

    .summary-container {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>

<div class="order-details-container">
  <h2>Order Details</h2>
  <p class="order-id">Order ID: <%= order.orderId %></p>

  <!-- Order Items Table -->
  <table class="order-table">
    <thead>
      <tr>
        <th>Product</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>
    <tbody>
      <% order.orderItems.forEach(item => { %>
        <tr>
          <td><%= item.product.productName %></td>
          <td><%= item.quantity %></td>
          <td>$<%= item.price.toFixed(2) %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <!-- Order Summary -->
  <div class="summary-container">
    <h3>
      Status:
      <span class="status-badge status-<%= order.status.toLowerCase() %>">
        <%= order.status %>
      </span>
    </h3>
    <h3>Total: $<%= order.finalAmount.toFixed(2) %></h3>
  </div>
  <p><strong>Payment Method:</strong> <%= order.paymentMethod %></p>
  <p><strong>Invoice Date:</strong> <%= moment(order.invoiceDate).format('MMMM Do YYYY') %></p>

  <!-- Back to Orders Button -->
  <a href="/admin/orderList" class="btn">Back to Orders</a>
</div>

<%- include("../../views/partials/admin/footer") %>
