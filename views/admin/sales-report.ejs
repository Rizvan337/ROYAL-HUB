<%- include("../../views/partials/admin/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
    <link rel="stylesheet" href="/css/admin.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f3f4f6;
            margin: 0;
            padding: 0;
            color: #333;
        }
        
        .container {
            max-width: 1200px;
            margin: 40px auto;
            padding: 30px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }
        
        h1 {
            text-align: center;
            color: #2c3e50;
            margin-bottom: 30px;
        }
        
        .filter-form {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 20px;
        }

        label {
            font-weight: 600;
            margin-right: 10px;
        }

        input[type="date"], select {
            padding: 8px;
            border: 1px solid #d1d5db;
            border-radius: 5px;
            font-size: 14px;
        }
        
        table {
            width: 100%;
            border-collapse: collapse;
            margin: 30px 0;
            font-size: 16px;
        }
        
        table th {
            background-color: #4b5155;
            color: white;
            padding: 15px;
            text-transform: uppercase;
        }
        
        table td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #e5e7eb;
        }
        
        .primary-btn, .secondary-btn {
            padding: 12px 20px;
            background-color: #4d555a;
            color: white;
            font-size: 16px;
            font-weight: 600;
            text-transform: uppercase;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }
        
        .primary-btn:hover, .secondary-btn:hover {
            background-color: #2c3e50;
        }

        #download-pdf, #download-excel {
            display: inline-block;
            margin: 20px 10px 0 10px;
        }

        .no-data {
            text-align: center;
            color: #7f8c8d;
            font-size: 18px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Sales Report</h1>
        <form method="GET" action="/admin/sales-report" class="filter-form">
            <label for="startDate">Start Date:</label>
            <input type="date" id="startDate" name="startDate" value="<%= startDate || '' %>">
            
            <label for="endDate">End Date:</label>
            <input type="date" id="endDate" name="endDate" value="<%= endDate || '' %>">
            
            <label for="filterType">Filter:</label>
            <select id="filterType" name="filterType">
                <option value="daily" <%= filterType === 'daily' ? 'selected' : '' %>>Daily</option>
                <option value="weekly" <%= filterType === 'weekly' ? 'selected' : '' %>>Weekly</option>
                <option value="monthly" <%= filterType === 'monthly' ? 'selected' : '' %>>Monthly</option>
                <option value="custom" <%= filterType === 'custom' ? 'selected' : '' %>>Custom Range</option>
            </select>

            <button type="submit" class="primary-btn">Generate Report</button>
        </form>

        <% if (salesData.length > 0) { %>
            <table>
                <thead>
                    <tr>
                        <th>Total Sales</th>
                        <th>Total Orders</th>
                        <th>Total Cancelled</th>
                        <th>Total Delivered</th>
                        <th>Total Returned</th>
                        <th>Total Shipped</th>
                    </tr>
                </thead>
                <tbody>
                    <% salesData.forEach((data) => { %>
                        <tr>
                            <td>$<%= data.totalSales.toFixed(2) %></td>
                            <td><%= data.totalOrders %></td>
                            <td><%= data.totalCancelled %></td>
                            <td><%= data.totalDelivered %></td>
                            <td><%= data.totalReturned %></td>
                            <td><%= data.totalShipped %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>

            <button id="download-pdf" class="secondary-btn">Download PDF</button>
            <button id="download-excel" class="secondary-btn">Download Excel</button>
        <% } else { %>
            <p class="no-data">No sales data available for the selected range.</p>
        <% } %>
    </div>

    <script>
        document.getElementById('download-pdf').addEventListener('click', function() {
            Swal.fire('Generating PDF...', '', 'info');
            window.location.href = '/admin/sales-report/download?format=pdf&startDate=<%= startDate %>&endDate=<%= endDate %>';
        });

        document.getElementById('download-excel').addEventListener('click', function() {
            Swal.fire('Generating Excel file...', '', 'info');
            window.location.href = '/admin/sales-report/download?format=excel&startDate=<%= startDate %>&endDate=<%= endDate %>';
        });
    </script>
    <%- include("../../views/partials/admin/footer") %>
</body>
</html>
