<style>
  .btn {
      display: inline-block;
      padding: 12px 20px;
      font-size: 16px;
      font-weight: bold;
      color: #fff;
      background-color: #4cae4c;;
      border: none;
      border-radius: 5px;
      transition: background-color 0.3s, transform 0.3s;
      cursor: pointer;
      text-align: center;
  }


  .btn:hover {
      background-color: #4cae4c;;
      transform: translateY(-2px);
  }


  .btn:active {
      transform: translateY(1px);
  }
  .wishlist-btn {
      position: absolute;
      top: 10px;
      right: 10px;
      background-color: rgba(255, 255, 255, 0.8);
      padding: 10px;
      border-radius: 50%;
      color: #ff6b6b;
      font-size: 18px;
      z-index: 10;
      transition: background-color 0.3s, color 0.3s, transform 0.3s;
  }


  .wishlist-btn:hover {
      background-color: rgba(255, 255, 255, 1);
      color: #ff4c4c;
      transform: translateY(-2px);
  }


  .wishlist-btn:active {
      transform: translateY(1px);
  }


   /* Product Card */
   .product-cart-wrap {
      border: 1px solid #eee;
      padding: 20px;
      margin-bottom: 30px;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
      transition: transform 0.3s, box-shadow 0.3s;
  }

  .product-cart-wrap:hover {
      transform: scale(1.05);
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  /* Product Image Styling */
  .product-img-action-wrap {
      position: relative;
  }

  .product-img {
      position: relative;
      display: block;
      overflow: hidden;
  }

  .product-img img {
      width: 100%;
      height: auto;
      border-radius: 8px;
      transition: transform 0.3s ease;
  }

  .product-img:hover img {
      transform: scale(1.1);
  }

  /* Product Content */
  .product-content-wrap h6 {
      font-size: 18px;
      color: #333;
      margin-bottom: 5px;
      font-weight: 600;
  }

  .product-content-wrap h5 {
      font-size: 16px;
      color: #28a745; /* Green color for price */
      margin-bottom: 10px;
      font-weight: 700;
  }

  .product-content-wrap a {
      display: inline-block;
      padding: 8px 12px;
      background-color: #28a745; /* Green button for "Add to Cart" */
      color: white;
      text-transform: uppercase;
      font-size: 14px;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 600;
      transition: background-color 0.3s, transform 0.3s;
  }

  .product-content-wrap a:hover {
      background-color: #218838;
      transform: translateY(-2px);
  }
 








</style>
