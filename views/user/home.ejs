<section class="product spad">
  <div class="container">
      <div class="row">
          <div class="col-lg-12">
              <ul class="filter__controls">
                  <li data-filter=".new-arrivals">SPARE PARTS</li>
              </ul>
          </div>
      </div>
      <div class="row product__filter">
        <%for(let i=0;i<products.length;i++){%>
              <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                  <div class="product-cart-wrap mb-30 bg-white">
                      <div class="product-img-action-wrap">
                          <div class="product-img product-img-zoom">
                                <!-- detailed page for the product  -->
                              <a href="/product/<%=products[i].slug%>">
                                  <img class="default-img" src="/uploads/re-image/<%=products[i].productImage[0]%>" alt="<%=products[i].productName%>">
                              </a>
       
                    </div> 
                      </div> 
                      <div class="product-action-1">
                        <form method="post" action="/addToWhishlist" id="wishlistForm<%= products[i]._id %>">
                            <input value="1" type="hidden" name="quantity">
                            <input type="hidden" name="productId" value="<%= products[i]._id %>">
                            <i
                              class="fas fa-heart not-added"
                              id="wishlistIcon<%= products[i]._id %>"
                              onclick="submitWhishlistForm('<%= products[i]._id %>')"
                            ></i>
                          </form>
                      </div>


                      <div class="product-content-wrap">
                          <h6><%=products[i].productName%></h6>
                          <h5>$<%=products[i].salePrice%></h5>
                          <% if (products[i].stock > 0) { %>
                          <form action="/addToCart" method="POST" class="add-to-cart-form" style="display: inline;">
                            <input type="hidden" name="productId" value="<%= products[i]._id %>">
                            <input type="hidden" name="quantity" value="1"> 
                            <button type="submit" class="btn">Add to Cart</button>
                        </form>
                        <%}else{%>
                            <button class="btn" disabled style=" color: white; background-color: rgb(185, 175, 175); cursor: not-allowed;">Out of Stock</button>
                     <%}%>
                        </div>
                  </div>
              </div>
              <%}%>
      </div>
  </div>
</section>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const addToCartForms = document.querySelectorAll('.add-to-cart-form');
        
        addToCartForms.forEach(form => {
            form.addEventListener('submit', function (event) {
                event.preventDefault(); 
                fetch(form.action, {
                    method: 'POST',
                    body: new URLSearchParams(new FormData(form)),
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded'
                    }
                })
                .then(response => response.json())
                .then(data => {

                    Swal.fire({
                        title: 'Product added to cart!',
                        text: 'Would you like to go to the cart or continue shopping?',
                        icon: 'success',
                        showCancelButton: true,
                        confirmButtonText: 'Go to Cart',
                        cancelButtonText: 'Continue Shopping'
                    }).then((result) => {
                        if (result.isConfirmed) {
                            window.location.href = "/cart";
                        }
                    });
                })
                .catch (error=> {
    Swal.fire({
        toast:true,
      icon: 'error',
      title: 'Error',
      text: 'Please try again with Login.',
      confirmButtonText: 'OK',
    });
  })
            });
        });
    });
    function submitWhishlistForm(productId) {
        const form = document.getElementById('wishlistForm' + productId);
        const heartIcon = document.getElementById('wishlistIcon' + productId);
        
        // Toggle the heart icon state
        heartIcon.classList.toggle('added');
        heartIcon.classList.toggle('not-added');
        
        form.submit();
    }
    


    async function submitWhishlistForm(productId) {
  const form = document.getElementById('wishlistForm' + productId);
  const heartIcon = document.getElementById('wishlistIcon' + productId);

  // Prepare form data
  const formData = new FormData(form);
  const data = {};
  formData.forEach((value, key) => {
    data[key] = value;
  });

  try {
    // Send the request to the server
    const response = await fetch(form.action, {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(data),
    });

    const result = await response.json();

    if (response.ok && result.success) {
      // Success message with SweetAlert
      Swal.fire({
        toast:true,
        icon: 'success',
        title: 'Added to Wishlist',
        text: result.message,
        confirmButtonText: 'OK',
      }).then(() => {
        // Update heart icon state
        heartIcon.classList.remove('not-added');
        heartIcon.classList.add('added');
      });
    } else {
      // Error or already added message
      Swal.fire({
        toast:true,
        position:'top-end',
        icon: 'info',
        title: 'Already in Wishlist',
        text: result.message,
        confirmButtonText: 'Got it',
      });
    }
  } catch (error) {
    // Show error SweetAlert if something goes wrong
    Swal.fire({
        toast:true,
      icon: 'error',
      title: 'Error',
      text: 'Please try again with Login.',
      confirmButtonText: 'OK',
    });
  }
}

</script>

