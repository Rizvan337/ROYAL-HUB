<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <style>
    /* General Styles */
    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f3f6f9;
      margin: 0;
      display: flex;
      height: 100vh;
    }

    /* Sidebar Styles */
    .sidebar {
      width: 250px;
      background-color: #1d3557;
      color: #fff;
      padding: 20px 0;
      display: flex;
      flex-direction: column;
      position: fixed;
      height: 100%;
      box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar .logo {
      text-align: center;
      margin-bottom: 30px;
    }

    .sidebar .logo h1 {
      font-size: 22px;
      color: #fff;
      margin: 0;
    }

    .sidebar ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .sidebar ul li {
      margin: 10px 0;
    }

    .sidebar ul li a {
      text-decoration: none;
      color: #fff;
      padding: 12px 20px;
      display: block;
      border-radius: 8px;
      font-size: 16px;
      transition: background 0.3s ease;
    }

    .sidebar ul li a:hover,
    .sidebar ul li a.active {
      background-color: #457b9d;
    }

    .sidebar ul li a i {
      margin-right: 10px;
    }

    /* Main Content Styles */
    .main-content {
      margin-left: 250px;
      padding: 20px;
      width: calc(100% - 250px);
      overflow: auto;
    }

    .orders-container {
      background-color: #ffffff;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    h2 {
      color: #1d3557;
      font-size: 26px;
      font-weight: 700;
      margin-bottom: 20px;
    }

    .btn {
      display: inline-block;
      background-color: #1d3557;
      color: #ffffff;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      margin-top: 20px;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #457b9d;
    }

    .cancel-btn {
      background-color: #ec0417;
      color: #ffffff;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
    }

    .cancel-btn:hover {
      background-color: #d62828;
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <aside class="sidebar">
    <div class="logo">
      <h1>My Dashboard</h1>
    </div>
    <ul>
      <li><a href="/userProfile" class="active"><i class="fas fa-user-circle"></i> My Profile</a></li>
      <li><a href="/addressManage"><i class="fas fa-map-marker-alt"></i> My Address</a></li>
      <li><a href="/my-orders"><i class="fas fa-box"></i> My Orders</a></li>
      <li><a href="#wallet"><i class="fas fa-wallet"></i> Wallet</a></li>
      <li><a href="/logout" class="text-danger"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
    </ul>
  </aside>

  <!-- Main Content -->
  <div class="main-content">
    <div class="orders-container">
      <h2>My Orders</h2>
      <% if (orders && orders.length > 0) { %>
        <table id="ordersTable" class="display">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Date</th>
              <th>Total Amount</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><a href="/orders/<%= order._id %>" class="order-id-link"><%= order.orderId %></a></td>
                <td><%= moment(order.invoiceDate).format('MMMM Do YYYY') %></td>
                <td>$<%= order.finalAmount.toFixed(2) %></td>
                <td><span id="status-<%= order._id %>"><%= order.status %></span></td>
                <td>
                  <% if (order.status !== 'Cancelled' && order.status !== 'Delivered') { %>
                    <button class="cancel-btn" onclick="cancelOrder('<%= order._id %>')">Cancel</button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No orders found.</p>
      <% } %>
      <a href="/userProfile" class="btn">Back to Profile</a>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

  <script>
    $(document).ready(function () {
      $('#ordersTable').DataTable({
        responsive: true,
        order: [[1, 'desc']],
        columnDefs: [{ orderable: false, targets: [4] }],
      });
    });

    async function cancelOrder(orderId) {
  // Use SweetAlert for confirmation
  const { isConfirmed } = await Swal.fire({
    title: 'Are you sure?',
    text: "Do you really want to cancel this order?",
    icon: 'warning',
    showCancelButton: true,
    toast:true,
    confirmButtonText: 'Yes, cancel it!',
    cancelButtonText: 'No, keep it'
  });

  if (isConfirmed) {
    try {
      const response = await fetch(`/orders/${orderId}/cancel`, { method: 'POST' });
      const result = await response.json();
      if (result.success) {
        // Update status on successful cancellation
        document.querySelector(`#status-${orderId}`).textContent = 'Cancelled';
        Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success'); // Show success message
      } else {
        // Handle failure response
        Swal.fire('Error', 'Failed to cancel the order. Please try again.', 'error');
      }
    } catch (error) {
      console.error('Error cancelling order:', error);
      // Use SweetAlert for error handling
      Swal.fire('Error', 'An error occurred. Please try again.', 'error');
    }
  }
}

  </script>
</body>
</html>
