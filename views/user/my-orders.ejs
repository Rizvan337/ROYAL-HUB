<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Orders</title>
  <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Nunito', sans-serif;
      background-color: #f3f6f9;
      display: flex;
      height: 100vh;
      flex-direction: column;
    }

    .container {
      display: flex;
      flex: 1;
      overflow: hidden;
    }

    aside {
      width: 250px;
      background-color: #e6eaf0;
      color: white;
      display: flex;
      flex-direction: column;
      padding-top: 20px;
      transition: width 0.3s;
      overflow-y: auto;
    }

    aside .nav-item {
      padding: 15px 20px;
      transition: background-color 0.3s ease;
    }

    aside .nav-link {
      color: rgb(19, 1, 1);
      text-decoration: none;
      display: flex;
      align-items: center;
    }

    aside .nav-link:hover {
      background-color: #345dce;
      color: white;
    }

    .main-content {
      flex: 1;
      padding: 20px;
      overflow-y: auto;
    }

    .orders-container {
      background-color: white;
      padding: 20px;
      border-radius: 12px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
    }

    h2 {
      color: #1d3557;
      font-size: 26px;
      margin-bottom: 20px;
    }

    .btn {
      background-color: #1d3557;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      display: inline-block;
      transition: background-color 0.3s ease;
    }

    .btn:hover {
      background-color: #457b9d;
    }
    .nav-lin{
      color: red;
      
    }

    .cancel-btn {
      background-color: #ec0417;
      color: white;
      padding: 6px 12px;
      border-radius: 6px;
      cursor: pointer;
      text-decoration: none;
      transition: background-color 0.3s ease;
    }

    .cancel-btn:hover {
      background-color: #d62828;
    }

    @media (max-width: 768px) {
      aside {
        width: 70px;
      }

      .main-content {
        margin-left: 70px;
      }

      aside .nav-link {
        justify-content: center;
      }

      aside .nav-link i {
        margin: 0;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <aside>
      <ul class="nav flex-column">
        <li class="nav-item">
          <a class="nav-link active" href="/userProfile">
            <i class="fas fa-user-circle me-2"></i>
            <span>My Profile</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/addressManage">
            <i class="fas fa-map-marker-alt me-2"></i>
            <span>My Address</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/my-orders">
            <i class="fas fa-box me-2"></i>
            <span>Orders</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/getWallet">
            <i class="fas fa-wallet me-2"></i>
            <span>Wallet</span>
          </a>
        </li>
        <li class="nav-item">
          <a class="nav-lin text-danger" href="/logout">
            <i class="fas fa-sign-out-alt me-2"></i>
            <span>Logout</span>
          </a>
        </li>
      </ul>
    </aside>

    <div class="main-content">
      <div class="orders-container">
<h2>My Orders</h2>
      <% if (orders && orders.length > 0) { %>
        <table id="ordersTable" class="display">
          <thead>
            <tr>
              <th>Order ID</th>
              <th>Date</th>
              <th>Total Amount</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(order => { %>
              <tr>
                <td><a href="/orders/<%= order._id %>" class="order-id-link"><%= order.orderId %></a></td>
                <td><%= moment(order.invoiceDate).format('MMMM Do YYYY') %></td>
                <td>$<%= order.finalAmount.toFixed(2) %></td>
                <td><span id="status-<%= order._id %>"><%= order.status %></span></td>
                <td>
                  <% if (order.status === 'Delivered') { %>
                    <button class="cancel-btn" onclick="returnOrder('<%= order._id %>')">Return</button>
                  <% } else if (order.status !== 'Cancelled'&&order.status !== 'Returned') { %>
                    <button class="cancel-btn" onclick="cancelOrder('<%= order._id %>')">Cancel</button>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No orders found.</p>
      <% } %>
      <a href="/userProfile" class="btn">Back to Profile</a>
    </div>
  </div>
</div>



<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  $(document).ready(function () {
    $('#ordersTable').DataTable({
      responsive: true,
      order: [[1, 'desc']],
      columnDefs: [{ orderable: false, targets: [4] }],
    });
  });

  async function cancelOrder(orderId) {
// Use SweetAlert for confirmation
const { isConfirmed } = await Swal.fire({
  title: 'Are you sure?',
  text: "Do you really want to cancel this order?",
  icon: 'warning',
  showCancelButton: true,
  toast:true,
  confirmButtonText: 'Yes, cancel it!',
  cancelButtonText: 'No, keep it'
});

if (isConfirmed) {
  try {
    const response = await fetch(`/orders/${orderId}/cancel`, { method: 'POST' });
    const result = await response.json();
    if (result.success) {
      // Update status on successful cancellation
      document.querySelector(`#status-${orderId}`).textContent = 'Cancelled';
      Swal.fire('Cancelled!', 'Your order has been cancelled.', 'success'); // Show success message
    } else {
      // Handle failure response
      Swal.fire('Error', 'Failed to cancel the order. Please try again.', 'error');
    }
  } catch (error) {
    console.error('Error cancelling order:', error);
    // Use SweetAlert for error handling
    Swal.fire('Error', 'An error occurred. Please try again.', 'error');
  }
}
}
async function returnOrder(orderId) {
  const {isConfirmed} = await Swal.fire({
    title: 'Are you sure?',
  text: "Do you really want to return this order?",
  icon: 'warning',
  showCancelButton: true,
  toast:true,
  confirmButtonText: 'Yes, return it!',
  cancelButtonText: 'No, keep it'
  })  
  if(isConfirmed){
    try {
      const response = await fetch(`/orders/${orderId}/return`, { method: 'POST' });
    const result = await response.json();
    if (result.success) {
      // Update status on successful cancellation
      document.querySelector(`#status-${orderId}`).textContent = 'Returned';
      Swal.fire('Returned!', 'Your order has been returned.', 'success'); // Show success message
    } else {
      // Handle failure response
      Swal.fire('Error', 'Failed to return the order. Please try again.', 'error');
    }
    } catch (error) {
      console.error('Error cancelling order:', error);
    Swal.fire('Error', 'An error occurred. Please try again.', 'error');
    }
  }
}

</script>
</body>
</html>

</body>
</html>