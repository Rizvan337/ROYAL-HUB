<%- include("../../views/partials/user/header") %>
<title>My Wishlist</title>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background-color: #f8f8f8;
    color: #333;
  }

  main {
    max-width: 800px;
    margin: 20px auto;
    padding: 20px;
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .wishlist-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .wishlist-item {
    display: flex;
    align-items: center;
    gap: 20px;
    border: 1px solid #ddd;
    padding: 15px;
    border-radius: 8px;
    justify-content: space-between;
  }

  .product-image {
    width: 120px;
    height: 120px;
    object-fit: cover;
    border-radius: 8px;
  }

  .product-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .product-name {
    margin: 0;
    font-size: 18px;
    color: #007bff;
  }

  .product-price,
  .product-quantity {
    font-size: 14px;
    color: #666;
  }

  .product-actions {
    display: flex;
    gap: 10px;
  }

  .remove-btn,
  .add-to-cart-btn {
    padding: 8px 15px;
    font-size: 14px;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  .remove-btn {
    background-color: #dc3545;
  }

  .remove-btn:hover {
    background-color: #c82333;
  }

  .add-to-cart-btn {
    background-color: #28a745;
  }

  .add-to-cart-btn:hover {
    background-color: #218838;
  }

  .empty-wishlist {
    text-align: center;
    padding: 50px 20px;
  }

  .empty-wishlist h2 {
    font-size: 24px;
    margin-bottom: 10px;
  }

  .browse-btn {
    background-color: #007bff;
    color: white;
    text-decoration: none;
    padding: 10px 20px;
    border-radius: 4px;
  }

  .browse-btn:hover {
    background-color: #0056b3;
  }
   /* Pagination styles */
   .pagination {
    display: flex;
    justify-content: center;
    gap: 10px;
    margin-top: 20px;
  }

  .pagination a {
    padding: 10px 15px;
    font-size: 16px;
    color: #007bff;
    border: 1px solid #ddd;
    border-radius: 4px;
    text-decoration: none;
  }

  .pagination a:hover {
    background-color: #007bff;
    color: white;
  }

  .pagination .active {
    background-color: #007bff;
    color: white;
    border: 1px solid #007bff;
  }

  .pagination .disabled {
    color: #ccc;
    pointer-events: none;
  }
</style>

<main>
  <% if (whishlist && whishlist.products.length > 0) { %>
    <div class="wishlist-container">
      <% whishlist.products.forEach(item => { %>
        <div class="wishlist-item">
          <img class="product-image" src="/uploads/re-image/<%= item.product.productImage %>" alt="<%= item.product.productName %>">
          <div class="product-details">
            <h2 class="product-name"><%= item.product.productName %></h2>
            <p class="product-price">Price: â‚¹<%= item.product.salePrice %></p>
            <p class="product-quantity">Quantity: <%= item.quantity %></p>
          </div>
          <div class="product-actions">
            <button class="remove-btn" onclick="removeFromWishlist('<%= item.product._id %>')">Remove</button>
            <button class="add-to-cart-btn" onclick="addToCart('<%= item.product._id %>')">Add to Cart</button>
          </div>
        </div>
      <% }); %>
    </div>
    <!-- Pagination -->
    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>">&laquo; Previous</a>
      <% } else { %>
        <a href="#" class="disabled">&laquo; Previous</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <a href="?page=<%= i %>" class="<%= currentPage === i ? 'active' : '' %>"><%= i %></a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>">Next &raquo;</a>
      <% } else { %>
        <a href="#" class="disabled">Next &raquo;</a>
      <% } %>
    </div>
  <% } else { %>
    <div class="empty-wishlist">
      <h2>Your Wishlist is Empty</h2>
      <p>Start adding your favorite products to your wishlist!</p>
      <a href="/" class="browse-btn">Browse Products</a>
    </div>
  <% } %>
</main>


<%- include("../../views/partials/user/footer") %>

<script>
  async function removeFromWishlist(productId) {
    try {
      const response = await fetch("/whishlist/remove", {
        method: "POST",
        headers: {
          "Content-Type": "application/json",
        },
        body: JSON.stringify({ productId })
      });

      const result = await response.json();

      if (response.ok && result.success) {
        Swal.fire({
          toast: true,
          icon: "success",
          title: "Removed!",
          text: result.message,
          confirmButtonText: "OK",
        }).then(() => {
          location.reload(); // Reload the page to update the wishlist
        });
      } else {
        Swal.fire({
          icon: "info",
          title: "Error!",
          text: result.message,
          confirmButtonText: "Try again",
        });
      }
    } catch (error) {
      Swal.fire({
        icon: "error",
        title: "Error!",
        text: "Something went wrong. Please try again later.",
        confirmButtonText: "OK",
      });
    }
  }

  async function addToCart(productId) {
  // Get the quantity from the input or default it to 1
  const quantity = 1; // You can change this if you want to ask for a quantity (or get it dynamically)
  
  try {
    const response = await fetch("/addToCart", {
      method: "POST",
      headers: {
        "Content-Type": "application/json",
      },
      body: JSON.stringify({ productId, quantity }) // Send productId and quantity to the server
    });

    const result = await response.json();

    if (response.ok) {
      Swal.fire({
        toast: true,
        icon: "success",
        title: "Added to Cart!",
        text: result.message,
        confirmButtonText: "OK",
      });
    } 
    
    
     
    else {
      Swal.fire({
        toast:true,
        icon: "info",
        title: "Error!",
        text: result.message,
        confirmButtonText: "Try again",
      });
    }
  } catch (error) {
    Swal.fire({
      toast:true,
      icon: "error",
      title: "Error!",
      text: "Something went wrong. Please try again later.",
      confirmButtonText: "OK",
    });
  }
}

</script>
</body>
</html>
