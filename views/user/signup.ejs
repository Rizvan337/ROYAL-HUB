    //         else {
    //             error3.style.display = "none";
    //             error3.innerHTML = "";
    //         }
    //     }
    function phoneValidateCheking(e) {
    const phoneval = phoneid.value.trim();
    const phoneRegex = /^[6-9][0-9]{9}$/; 
    const numericOnlyRegex = /^[0-9]+$/; 

    if (phoneval === "") {
        error3.style.display = "block";
        error3.innerHTML = "Enter a valid phone number.";
    } else if (!numericOnlyRegex.test(phoneval)) {
        error3.style.display = "block";
        error3.innerHTML = "Phone number should contain only numbers.";
    } else if (!phoneRegex.test(phoneval)) {
        error3.style.display = "block";
        error3.innerHTML = "Phone number must start with 6, 7, 8, or 9 and have exactly 10 digits.";
    }else if (/^(\d)\1{9}$/.test(phoneval)) { 
        error3.style.display = "block";
        error3.innerHTML = "Phone number cannot have all digits the same.";
    } 
    
    else {
        error3.style.display = "none";
        error3.innerHTML = "";
    }
}



        function passValidateCheking(e){
            const passval = passid.value;
            const cpassval = cpassid.value;
            const alpha = /[a-zA-Z]/;
            const digit = /\d/;
            if(passval.length<8){
                error4.style.display = "block";
                error4.innerHTML = "Should contain at least 8 characters";
            } else if (!alpha.test(passval)||!digit.test(passval)){
                error4.style.display = "block";
                error4.innerHTML = "Should contain numbers and alphabets";
            } else {
                error4.style.display = "none";
                error4.innerHTML = "";
            }
            if(passval!==cpassval){
                error5.style.display = "block";
                error5.innerHTML = "Password do not match";
            } else {
                error5.style.display = "none";
                error5.innerHTML = "";
            }
        }

        document.addEventListener("DOMContentLoaded", function(){
            signform.addEventListener("submit", function(e){
                nameValidateCheking();
                emailValidateCheking();
                phoneValidateCheking();
                passValidateCheking();

                if(
                    !nameid||
                    !emailid||
                    !phoneid||
                    !passid||
                    !error1||
                    !error2||
                    !error3||
                    !error4||
                    !error5||
                    !signform
                ){
                    console.error("One or more elements not found");
                }
                if( 
                    error1.innerHTML||
                    error2.innerHTML||
                    error3.innerHTML||
                    error4.innerHTML||
                    error5.innerHTML
                ){
                    e.preventDefault();
                }
            });
        });
    </script>
</body>
</html>