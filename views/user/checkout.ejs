<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            padding: 30px;
            margin: 0;
            color: #333;
        }
        
        .checkout-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            gap: 20px;
        }

        .address-section, .summary-section {
            background-color: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .address-section {
            flex: 2;
        }

        .summary-section {
            flex: 1;
            min-width: 350px;
        }

        .address-section:hover, .summary-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #ff6f61;
        }

        .add-address-btn, .edit-btn, .apply-btn, .checkout-btn, .wallet-balance button {
            background-color: #ff6f61;
            color: #fff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .add-address-btn {
            float: right;
        }

        .add-address-btn:hover, .edit-btn:hover, .apply-btn:hover, .checkout-btn:hover, .wallet-balance button:hover {
            background-color: #ff4a3a;
        }

        .address-card {
            border: 1px solid #eee;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            position: relative;
            background-color: #fafafa;
        }

        .address-card input[type="radio"] {
            margin-right: 10px;
        }

        .edit-btn {
            background-color: #00bfa5;
            position: absolute;
            right: 15px;
            top: 15px;
        }

        .edit-btn:hover {
            background-color: #009688;
        }

        .summary-section input[type="text"] {
            width: calc(100% - 90px);
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .summary-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .summary-table td {
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
        }

        .summary-table tr:last-child td {
            border-bottom: none;
            font-weight: bold;
        }

        .payment-options label {
            display: flex;
            align-items: center;
            margin: 10px 0;
            cursor: pointer;
        }

        .payment-options input {
            margin-right: 10px;
        }
        

        .wallet-balance {
            margin-top: 30px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .wallet-balance h4 {
            margin-bottom: 10px;
        }

        .checkout-btn {
            width: 100%;
            background-color: #4caf50;
            margin-top: 20px;
        }

        .checkout-btn:hover {
            background-color: #43a047;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .checkout-container {
                flex-direction: column;
            }

            .summary-section {
                order: -1;
                margin-bottom: 20px;
            }
        }
    </style>
</head>
<body>
    <div class="checkout-container">
        <!-- Address Section -->
        <div class="address-section">
            <h3 class="section-title">Choose Address</h3>
            <button onclick="window.location.href='/addressManage'" class="add-address-btn"><i class="fas fa-plus"></i> Add Address</button>
            <form method="POST" action="/checkout">
                <% addresses.forEach(address => { %>
                    <div class="address-card">
                        <input type="radio" name="selectedAddress" value="<%= address._id %>" required>
                        <label>
                            <strong><%= address.name %></strong><br>
                            <%= address.street %>, <%= address.city %>, 
                            <%= address.state %>, <br>
                           Pin:<%= address.zip %>,<br>
                            Ph: <%= address.phone %>
                        </label>
                        <button formaction="/editAddress/<%= address._id %>" class="edit-btn"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                <% }) %>
            
        </div>

        <!-- Summary Section -->
        <div class="summary-section">
            <h3 class="section-title">Order Summary</h3>
            <div>
                <label>Coupon code:</label>
                <input type="text" name="coupon" placeholder="Enter coupon">
                <button class="apply-btn"><i class="fas fa-tag"></i> Apply</button>
            </div>

            <table class="summary-table">
                <tr><td>Subtotal:</td><td>₹<%= subtotal %></td></tr>
                <tr><td>Tax:</td><td>₹<%= tax %></td></tr>
                <tr><td>Total Amount:</td><td>₹<%= totalAmount %></td></tr>
            </table>

            <h3 class="section-title">Choose Payment Method</h3>
            <div class="payment-options">
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="Wallet" required>
        <span class="custom-radio"></span>
        <i class="fas fa-wallet"></i> 
        Wallet
                </label>
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="Razorpay" required>
                    <span class="custom-radio"></span>
                    <i class="fas fa-credit-card"></i>
                    Razorpay
                </label>
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="COD" required>
                    <span class="custom-radio"></span>
                    <i class="fas fa-money-bill-wave"></i>
                    Cash on Delivery
                </label>
            </div>


            
            <button type="submit" class="checkout-btn"><i class="fas fa-shopping-cart"></i> Proceed to Checkout</button>
        </div>
    </div>
</form>
</body>
</html>
