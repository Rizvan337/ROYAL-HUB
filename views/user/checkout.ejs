<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Checkout</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Global Styles */
        body {
            font-family: 'Poppins', sans-serif;
            background-color: #f7f7f7;
            padding: 30px;
            margin: 0;
            color: #333;
        }
        
        .checkout-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            gap: 20px;
        }

        .address-section, .summary-section {
            background-color: #fff;
            border-radius: 12px;
            padding: 25px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .address-section {
            flex: 2;
        }

        .summary-section {
            flex: 1;
            min-width: 350px;
        }

        .address-section:hover, .summary-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        }

        .section-title {
            font-size: 1.5rem;
            margin-bottom: 20px;
            color: #ff6f61;
        }

        .add-address-btn, .edit-btn, .apply-btn, .checkout-btn, .wallet-balance button {
            background-color: #ff6f61;
            color: #fff;
            border: none;
            padding: 12px 20px;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

        .add-address-btn {
            float: right;
        }

        .add-address-btn:hover, .edit-btn:hover, .apply-btn:hover, .checkout-btn:hover, .wallet-balance button:hover {
            background-color: #ff4a3a;
        }

        .address-card {
            border: 1px solid #eee;
            padding: 15px;
            border-radius: 8px;
            margin-bottom: 20px;
            position: relative;
            background-color: #fafafa;
        }

        .address-card input[type="radio"] {
            margin-right: 10px;
        }

        .edit-btn {
            background-color: #00bfa5;
            position: absolute;
            right: 15px;
            top: 15px;
        }

        .edit-btn:hover {
            background-color: #009688;
        }

        .summary-section input[type="text"] {
            width: calc(100% - 90px);
            padding: 10px;
            margin-right: 10px;
            border: 1px solid #ddd;
            border-radius: 6px;
        }

        .summary-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .summary-table td {
            padding: 10px 0;
            border-bottom: 1px solid #f1f1f1;
        }

        .summary-table tr:last-child td {
            border-bottom: none;
            font-weight: bold;
        }

        .payment-options label {
            display: flex;
            align-items: center;
            margin: 10px 0;
            cursor: pointer;
        }

        .payment-options input {
            margin-right: 10px;
        }
        

        .wallet-balance {
            margin-top: 30px;
            padding-top: 15px;
            border-top: 1px solid #eee;
        }

        .wallet-balance h4 {
            margin-bottom: 10px;
        }

        .checkout-btn {
            width: 100%;
            background-color: #4caf50;
            margin-top: 20px;
        }

        .checkout-btn:hover {
            background-color: #43a047;
        }

        /* Responsive Styles */
        @media (max-width: 768px) {
            .checkout-container {
                flex-direction: column;
            }

            .summary-section {
                order: -1;
                margin-bottom: 20px;
            }
        }

        .modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.modal-content {
    background-color: white;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    max-width: 400px;
    width: 100%;
    text-align: center;
}

.coupon-list {
    list-style: none;
    padding: 0;
}

.coupon-item {
    margin-bottom: 10px;
    display: flex;
    justify-content: space-between;
}

.close-btn, .copy-btn {
    background-color: #ff6f61;
    color: white;
    padding: 10px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}
.remove-btn{
    background-color: #db1705;
    color: white;
    padding: 10px;
    border: none;
    cursor: pointer;
    border-radius: 5px;
}

    </style>
</head>
<body>
    <div class="checkout-container">
        <!-- Address Section -->
        <div class="address-section">
            <h3 class="section-title">Choose Address</h3>
            <button onclick="window.location.href='/addressManage'" class="add-address-btn"><i class="fas fa-plus"></i> Add Address</button>
            <form method="POST" action="/checkout">
                <% addresses.forEach(address => { %>
                    <div class="address-card">
                        <input type="radio" name="selectedAddress" value="<%= address._id %>" required>
                        <label>
                            <strong><%= address.name %></strong><br>
                            <%= address.street %>, <%= address.city %>, 
                            <%= address.state %>, <br>
                           Pin:<%= address.zip %>,<br>
                            Ph: <%= address.phone %>
                        </label>
                        <button formaction="/editAddress/<%= address._id %>" class="edit-btn"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                <% }) %>
            
        </div>

        <!-- Summary Section -->
        <div class="summary-section">   
            <h3 class="section-title">Order Summary</h3>
            <div>
                <!-- <label>Coupon code:</label>
                <input type="text" name="coupon" placeholder="Enter coupon">
                <button class="apply-btn"><i class="fas fa-tag"></i> Apply</button> -->
                <label>Coupon code:</label>
                <input type="text" id="couponInput" name="couponCode" placeholder="Enter coupon">
                <%if(cart.coupon.code===null){%>
                <button type="button" class="apply-btn" onclick="applyCoupon()">Apply</button>
                <%}else{%>
                    <button type="button" class="remove-btn" onclick="removeCoupon()">Remove</button>
                    <%}%>
                <button type="button" class="apply-btn" onclick="openModal()">View Coupons</button>
            </div>

            <table class="summary-table">
                <tr><td>Subtotal:</td><td>$<%= subtotal %></td></tr>
                <tr><td>Delivery charge:</td><td>$<%= deliverycharge %></td></tr>
                <tr><td>Discount:</td><td>$<%= discount||0 %></td></tr>
                <tr><td>Total Amount:</td><td>$<%= grandTotal %></td></tr>
            </table>

            <h3 class="section-title">Choose Payment Method</h3>
            <div class="payment-options">
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="Wallet" required>
        <span class="custom-radio"></span>
        <i class="fas fa-wallet"></i> 
        Wallet
                </label>
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="Razorpay" required>
                    <span class="custom-radio"></span>
                    <i class="fas fa-credit-card"></i>
                    Razorpay
                </label>
                <label class="payment-label">
                    <input type="radio" name="paymentMethod" value="COD" required>
                    <span class="custom-radio"></span>
                    <i class="fas fa-money-bill-wave"></i>
                    Cash on Delivery
                </label>
            </div>


            
            <button type="submit" class="checkout-btn"><i class="fas fa-shopping-cart"></i> Proceed to Checkout</button>
        </div>
    </div>
</form>


 <!-- Coupon Modal -->
<div id="couponModal" class="modal">
    <div class="modal-content">
        <h3 class="modal-header">Available Coupons</h3>
        <ul class="coupon-list">
            <% coupon.forEach(coupon => { %>
                <li class="coupon-item">
                    <span><%= coupon.code %> - <%= coupon.description %></span>
                    <button class="copy-btn" onclick="copyCouponCode('<%= coupon.code %>')">Copy</button>
                </li>
            <% }) %>
        </ul>
        <button class="close-btn" onclick="closeModal()">Close</button>
    </div>
</div>




<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>


function openModal() {
    document.getElementById('couponModal').style.display = 'flex';
}

function closeModal() {
    document.getElementById('couponModal').style.display = 'none';
}

function copyCouponCode(code) {
    navigator.clipboard.writeText(code).then(function() {
        Swal.fire({
            icon: 'success',
            title: 'Copied!',
            text: 'Coupon code copied to clipboard!',
            confirmButtonText: 'OK'
        });
    }, function(err) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Error copying coupon code: ' + err,
            confirmButtonText: 'Try Again'
        });
    });
}


function applyCoupon() {
    const couponCode = document.getElementById('couponInput').value;

    fetch('/applyCoupon', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ couponCode })
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            Swal.fire({
                icon:'success',
                title:'Success!',
                text:data.message,
                showConfirmButton: false,  
    timer: 2000
            })
            setTimeout(() => {
                window.location.reload()
            }, 1000);
        } else {
            Swal.fire({
                icon:'Error',
                title:'Error!',
                text:data.message,
                confirmButtonText:'Try Again'
            })
        }
    })
    .catch(error => {
        console.error('Error applying coupon:', error);
        alert('An error occurred while applying the coupon.');
    });
}



async function removeCoupon() {
    try {
        const couponCode = document.getElementById('couponInput').value;
        const response = await fetch('/removeCoupon', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ couponCode })
        });

        const result = await response.json();

        if (response.ok) {
            Swal.fire({
                icon: 'success',
                title: 'Success',
                text: result.message,
                showConfirmButton: false,  
    timer: 2000
            });
            setTimeout(() => {
                window.location.reload()
            }, 1000);
        } else {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: result.message || 'Failed to remove coupon.',
                confirmButtonText: 'Try Again'
            });
        }
    } catch (error) {
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'An unexpected error occurred.',
            confirmButtonText: 'OK'
        });
        console.error("Error removing coupon:", error);
    }
}







document.querySelector('.checkout-btn').addEventListener('click', async function (e) {
        e.preventDefault(); 
        
        const selectedPaymentMethod = document.querySelector('input[name="paymentMethod"]:checked')?.value;
        const grandTotal = '<%= grandTotal %>'; 

        if (selectedPaymentMethod === "COD" && grandTotal > 1000) {
            
            Swal.fire({
                icon: 'error',
                title: 'COD Restriction',
                text: 'Orders above â‚¹1000 cannot use Cash on Delivery. Please select a different payment method.',
                confirmButtonText: 'Okay'
            });
        } else {
            
            document.querySelector('form').submit();
        }
    });
    
</script>
</body>
</html>
