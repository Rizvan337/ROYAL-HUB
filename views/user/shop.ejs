<div class="breadcrumb__text">
  <a href="/">Home</a> > <span>Shop</span>
</div>



<form method="GET" action="/shop" class="search-bar" style="margin-bottom: 20px;">
  <input
    type="text"
    name="search"
    placeholder="Search for products..."
    value="<%= search %>"
    class="search-input"
    style="width: 70%; padding: 10px; border: 1px solid #ddd; border-radius: 5px;"
  />
  <button type="submit" class="btn" style="margin-left: 10px;">Search</button>
</form>

<section class="filter__section">
  <div class="container">
    <div class="row">
      <!-- Sidebar for Categories and Filters -->
      <div class="col-lg-3">
        <!-- Categories Accordion -->
        <div class="card">
          <div class="card-heading">
            <a data-toggle="collapse" onclick="window.location.href='/shop';" data-target="#collapseOne">Categories</a>
          </div>
          <div id="collapseOne" class="collapse show">
            <div class="shop__sidebar__categories">
              <ul>
                <% categories.forEach(category => { %>
                  <li><a href="/shop?category=<%= category._id %>"><%= category.name %></a></li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
        <div class="sort-filter">
            <form class="formfilter" method="GET" action="/shop">
              <input type="hidden" name="search" value="<%= search %>">
              <input type="hidden" name="category" value="<%= categoryFilter %>">
              <select name="sort" onchange="this.form.submit()">
                <option value="">Sort By</option>
                <option value="price-low-high" <%= selectedSort === 'price-low-high' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price-high-low" <%= selectedSort === 'price-high-low' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="new-arrivals" <%= selectedSort === 'new-arrivals' ? 'selected' : '' %>>New Arrivals</option>
                <option value="name-asc" <%= selectedSort === 'name-asc' ? 'selected' : '' %>>A-Z</option>
                <option value="name-desc" <%= selectedSort === 'name-desc' ? 'selected' : '' %>>Z-A</option>
                <option value="popularity" <%= selectedSort === 'popularity' ? 'selected' : '' %>>Popularity</option>
              </select>
            </form>
          </div>
          
        <!-- Price Filter -->
        <div class="filter__item">
          <h4>Price Range</h4>
          <input type="number" id="minPrice" placeholder="Min Price">
          <input type="number" id="maxPrice" placeholder="Max Price">
          <button id="applyFiltersBtn">Apply Filters</button>
          <button
          onclick="window.location.href='/shop';"
          class="clearbtn"
          style="background-color: #dc3545; margin-top: 10px;"
        >
          Clear Filters
        </button>
        </div>
      </div>


      <!-- Products Section -->
      <div class="col-lg-9">
        <div class="row">
          <% products.forEach(product => { %>
            <div class="col-lg-4 col-md-6">
              <div class="product-cart-wrap">
                <div class="product-img">
                  <a href="/product/<%= product.slug %>">
                    <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                  </a>
                </div>
                <div class="product-content-wrap">
                  
                  <h6><%= product.productName %></h6>
                  <h5>$<%= product.salePrice %></h5>
                  <!-- <button  class="btn" type="button" onclick="addToCart('<%=product._id%>')">Add to Cart</button> -->
                  <button
                  class="btn wishlist-btn"
                  data-product-id="<%= product._id %>"
                  onclick="toggleWishlist('<%= product._id %>')"
                >
                  Add to Wishlist
                </button>
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</section>




<div class="pagination">
  <% if (currentPage > 1) { %>
    <a href="/shop?page=<%= currentPage - 1 %>&search=<%= search %>&sort=<%= selectedSort %>&category=<%= categoryFilter %>">&laquo; Previous</a>
  <% } %>

  <% for (let i = 1; i <= totalPages; i++) { %>
    <a href="/shop?page=<%= i %>&search=<%= search %>&sort=<%= selectedSort %>&category=<%= categoryFilter %>"
       class="<%= currentPage === i ? 'active' : '' %>">
       <%= i %>
    </a>
  <% } %>

  <% if (currentPage < totalPages) { %>
    <a href="/shop?page=<%= currentPage + 1 %>&search=<%= search %>&sort=<%= selectedSort %>&category=<%= categoryFilter %>">Next &raquo;</a>
  <% } %>
</div>



