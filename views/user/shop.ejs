<!-- Filter Section -->
<section class="filter__section spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <!-- Category Filter -->
                <div class="filter__item">
                    <h4>Categories</h4>
                    
                    <!-- Dropdown Container -->
                    <div class="dropdowns">
                        <!-- Dropdown Button -->
                        <button class="dropdown-button">Select Categories</button>
                
                        <!-- Dropdown Content -->
                        <div class="dropdown-content">
                            <ul>
                                <% categories.forEach(category => { %>
                                    <li>
                                        <!-- <label> -->
                                            <input name="category" type="checkbox" class="category-checkbox" value="<%= category._id %>">
                                            <%= category.name %>
                                        <!-- </label> -->
                                    </li>
                                <% }) %>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- Price Filter -->
                <div class="filter__item">
                    <h4>Price Range</h4>
                    <input type="number" id="minPrice" placeholder="Min Price">
                    <input type="number" id="maxPrice" placeholder="Max Price">
                </div>
                <!-- Apply Filters Button -->
<div class="filter__item">
    <button id="applyFiltersBtn">Apply Filters</button>
</div>

            </div>

            <div class="col-lg-9">
                <!-- Products Display -->
                <div class="row product__filter">
                    <% products.forEach(product => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="product-cart-wrap mb-30">
                                <div class="product-img-action-wrap">
                                    <a href="/productDetails?id=<%= product._id %>">
                                        <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                                    </a>
                                </div>
                                <div class="product-content-wrap">
                                    <h6><%= product.productName %></h6>
                                    <h5>$<%= product.salePrice %></h5>
                                    <a href="/addToCart?id=<%= product._id %>">Add to Cart</a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</section>








