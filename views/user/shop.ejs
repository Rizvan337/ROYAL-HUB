<%- include("../../views/partials/user/header") %>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
  /* General Button Styling */
  .btn {
    display: inline-block;
    padding: 12px 20px;
    font-size: 16px;
    font-weight: bold;
    color: #fff;
    background-color: #28a745;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
  }

  .btn:hover {
    background-color: #218838;
    transform: translateY(-2px);
  }

  .btn:active {
    transform: translateY(1px);
  }

  /* Product Card Styling */
  .product-cart-wrap {
    border: 1px solid #eee;
    padding: 20px;
    margin-bottom: 30px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    border-radius: 8px;
    transition: transform 0.3s, box-shadow 0.3s;
  }

  .product-cart-wrap:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
  }

  .product-img {
    position: relative;
    display: block;
    overflow: hidden;
    border-radius: 8px;
  }

  .product-img img {
    width: 100%;
    transition: transform 0.3s ease;
  }

  .product-img:hover img {
    transform: scale(1.1);
  }

  .product-content-wrap h6 {
    font-size: 18px;
    color: #333;
    font-weight: 600;
  }

  .product-content-wrap h5 {
    font-size: 16px;
    color: #28a745;
    font-weight: 700;
  }

  .breadcrumb__text {
    background: #f3f2ee;
    padding: 20px;
    border-radius: 5px;
    margin-bottom: 20px;
  }

  .breadcrumb__text a {
    color: #007bff;
    text-decoration: none;
  }

  .breadcrumb__text span {
    color: #555;
  }

  /* Sidebar and Filters */
  .card {
    border: 1px solid #ddd;
    border-radius: 8px;
    margin-bottom: 20px;
  }

  .card-heading a {
    display: block;
    font-size: 18px;
    font-weight: 600;
    padding: 15px;
    color: #333;
    background-color: #f8f9fa;
    text-decoration: none;
    transition: background-color 0.3s;
  }

  .card-heading a:hover {
    background-color: #e9ecef;
    color: #218838;
  }

  .shop__sidebar__categories {
    max-height: 300px;
    overflow-y: auto;
  }

  .shop__sidebar__categories ul {
    list-style: none;
    padding: 0;
  }

  .shop__sidebar__categories ul li {
    margin-bottom: 10px;
  }

  .shop__sidebar__categories ul li a {
    color: #555;
    text-decoration: none;
    display: flex;
    align-items: center;
  }

  .shop__sidebar__categories ul li a:hover {
    color: #218838;
  }

  .filter__item input[type="number"] {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #ddd;
    margin-bottom: 10px;
  }

  #applyFiltersBtn {
    background-color: #218838;
    color: #fff;
    padding: 10px 20px;
    border-radius: 5px;
    cursor: pointer;
    border: none;
    font-weight: 600;
    text-transform: uppercase;
    transition: background-color 0.3s, transform 0.3s;
  }

  #applyFiltersBtn:hover {
    background-color: #1e7e34;
    transform: translateY(-2px);
  }
  .sort-filter{
    transform: translate(1000px,-360px);
  }
</style>

<div class="breadcrumb__text">
  <a href="/">Home</a> > <span>Shop</span>
</div>

<section class="filter__section">
  <div class="container">
    <div class="row">
      <!-- Sidebar for Categories and Filters -->
      <div class="col-lg-3">
        <!-- Categories Accordion -->
        <div class="card">
          <div class="card-heading">
            <a data-toggle="collapse" data-target="#collapseOne">Categories</a>
          </div>
          <div id="collapseOne" class="collapse show">
            <div class="shop__sidebar__categories">
              <ul>
                <% categories.forEach(category => { %>
                  <li><a href="/shop?categories=<%= category._id %>&sort=<%= selectedSort %>&search=<%= search %>"><%= category.name %></a></li>
                <% }); %>
              </ul>
            </div>
          </div>
        </div>
        <div class="sort-filter">
            <form method="GET" action="/shop">
              <input type="hidden" name="search" value="<%= search %>">
              <input type="hidden" name="category" value="<%= categoryFilter %>">
              <select name="sort" onchange="this.form.submit()">
                <option value="">Sort By</option>
                <option value="price-low-high" <%= selectedSort === 'price-low-high' ? 'selected' : '' %>>Price: Low to High</option>
                <option value="price-high-low" <%= selectedSort === 'price-high-low' ? 'selected' : '' %>>Price: High to Low</option>
                <option value="new-arrivals" <%= selectedSort === 'new-arrivals' ? 'selected' : '' %>>New Arrivals</option>
                <option value="name-asc" <%= selectedSort === 'name-asc' ? 'selected' : '' %>>A-Z</option>
                <option value="name-desc" <%= selectedSort === 'name-desc' ? 'selected' : '' %>>Z-A</option>
                <option value="popularity" <%= selectedSort === 'popularity' ? 'selected' : '' %>>Popularity</option>
              </select>
            </form>
          </div>
          
        <!-- Price Filter -->
        <div class="filter__item">
          <h4>Price Range</h4>
          <input type="number" id="minPrice" placeholder="Min Price">
          <input type="number" id="maxPrice" placeholder="Max Price">
          <button id="applyFiltersBtn">Apply Filters</button>
        </div>
      </div>

      <!-- Products Section -->
      <div class="col-lg-9">
        <div class="row">
          <% products.forEach(product => { %>
            <div class="col-lg-4 col-md-6">
              <div class="product-cart-wrap">
                <div class="product-img">
                  <a href="/productDetails?id=<%= product._id %>">
                    <img src="/uploads/re-image/<%= product.productImage[0] %>" alt="<%= product.productName %>">
                  </a>
                </div>
                <div class="product-content-wrap">
                  
                  <h6><%= product.productName %></h6>
                  <h5>$<%= product.salePrice %></h5>
                  <!-- <button  class="btn" type="button" onclick="addToCart('<%=product._id%>')">Add to Cart</button> -->
                  
                </div>
              </div>
            </div>
          <% }); %>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include("../../views/partials/user/footer") %>

<script>
  
  document.getElementById('applyFiltersBtn').addEventListener('click', function () {
    const minPrice = document.getElementById('minPrice').value;
    const maxPrice = document.getElementById('maxPrice').value;
    const sort = new URLSearchParams(window.location.search).get('sort') || '';
    const category = new URLSearchParams(window.location.search).get('category') || '';
    let query = `/shop?minPrice=${minPrice}&maxPrice=${maxPrice}&sort=${sort}&category=${category}`;
    window.location.href = query;
  });

