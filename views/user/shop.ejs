 <script>
    document.addEventListener('DOMContentLoaded', function () {
        const categoryCheckboxes = document.querySelectorAll('.category-checkbox');
        const minPriceInput = document.getElementById('minPrice');
        const maxPriceInput = document.getElementById('maxPrice');
        const applyFiltersBtn = document.getElementById('applyFiltersBtn');
    
        // Listen for apply filter button click
        applyFiltersBtn.addEventListener('click', applyFilters);
    
        function applyFilters() {
            // Get selected categories
            let selectedCategories = Array.from(categoryCheckboxes)
                .filter(checkbox => checkbox.checked)
                .map(checkbox => checkbox.value);
    
            // Get price values and ensure valid ranges
            let minPrice = parseFloat(minPriceInput.value) || 0;
            let maxPrice = parseFloat(maxPriceInput.value) || Number.MAX_SAFE_INTEGER;
    
            // Validate that minPrice is not greater than maxPrice
            if (minPrice > maxPrice) {
                alert('Min Price should not be greater than Max Price');
                return;
            }
           

    
            // Build query string
            let queryString = `?categories=${selectedCategories.join(',')}&minPrice=${minPrice}&maxPrice=${maxPrice}`;
    
            // Redirect to the filtered URL
            window.location.href = `/shop${queryString}`;
        }
    });
    </script>